# Funciones de limpieza y normalizaciÃ³n de datos ECG

import pandas as pd
import numpy as np

def fill_missing_values(df):
    """Rellena los valores nulos con la mediana de cada columna."""
    df_filled = df.fillna(df.median())
    print("âœ… Valores nulos reemplazados por la mediana.")
    return df_filled

def normalize_data(df):
    """Normaliza los datos a un rango entre 0 y 1."""
    df_norm = (df - df.min()) / (df.max() - df.min())
    print("âœ… Datos normalizados entre 0 y 1.")
    return df_norm

