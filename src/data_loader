# FunciÃ³n para cargar los datos de ECG desde archivos CSV

import pandas as pd
import os

def load_data(file_path):
    """Carga un archivo CSV y lo devuelve como un DataFrame."""
    if os.path.exists(file_path):
        df = pd.read_csv(file_path)
        print(f"âœ… Datos cargados correctamente desde {file_path}")
        return df
    else:
        print(f"âŒ Error: No se encontrÃ³ el archivo {file_path}")
        return None

